---
import ListCategories from '@/components/ListCategories'
import ListPosts from '@/components/ListPosts'
import TitlePage from '@/components/TitlePage'
import BaseLayout from '@/layouts/BaseLayout'
import { getPosts } from '@/utils'

const MAX_POSTS = 5 // max number of posts to show on the home page
const posts = await getPosts(MAX_POSTS)
---

<style>
	.fancy-p {
		padding: 1em;
		border: 1px dashed #ccc;
		color: #333;
		transition: all 0.3s ease;
	}

	.fancy-p:hover {
		color: #666;
		border-color: #999;
	}
</style>

<BaseLayout title='Home'>
	<TitlePage title="Cozyan's Canvas üé®" />
	<p class='fancy-p'>
		Hi! üëã I'm Cozyan, just a regular person navigating the ups and downs of tech üñ•Ô∏è, life's
		rollercoasters, and the ever-twisting world of finance. <br />
		 At Cozyan's Canvas üé®, I share my stories and discoveries, all served with a dash of humor and
		a slice of beef ü•© for relatability üòä.
	</p>
	<ListCategories />

	<div>
		<h2 class='text-lg font-medium tracking-wide text-end'>Latest Posts</h2>
		<ListPosts FirstBig={true} posts={posts} />
	</div>

	<button id='goTopButton' class='go-top-button'>Go to Top</button>
	<script>
		const goTopButton = document.getElementById('goTopButton')

		if (goTopButton) {
			goTopButton.addEventListener('click', function () {
				window.scrollTo({
					top: 0,
					behavior: 'smooth'
				})
			})
		}
	</script>
	<style>
		.go-top-button {
			position: fixed;
			bottom: 20px;
			right: 20px;
			background-color: #ccc; /* Red background */
			color: white; /* White text */
			border: none; /* No border */
			cursor: pointer; /* Mouse pointer on hover */
			/* border-radius: 50%; Rounded corners */
			padding: 10px 15px; /* Some padding */
			font-size: 18px; /* Increase font size */
			z-index: 1000; /* High z-index */
		}
	</style>
</BaseLayout>

<script>
	import { animate } from 'motion'
	const showAnimations = localStorage.getItem('animations') === 'true'

	if (showAnimations) {
		animate(
			'.title',
			{ y: [80, 0], opacity: [0, 1] },
			{
				duration: 2.5,
				opacity: { duration: 3 },

				offset: [0, 0.55, 0.75]
			}
		)
	}
</script>
